<%- include('../Partials/header.ejs') %>
<nav class="navbar navbard-expand-lg navbark-dark bg-primary">
    <h1 class="text-center">Produtos</h1>
</nav>    
    <div class="container mt-3">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID: </th>
                    <th>Nome Produto</th>
                    <th>Quantidade</th>
                    <th>Preço</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% produtos.forEach((produtos) => { %>
                    <tr>
                        <th> <%= produtos.id %> </th>
                        <th> <%= produtos.nomeProduto %></th>
                        <th> <%= produtos.quantidade %> </th>
                        <th> <%= produtos.preco %> </th>
                        <th>
                            <form action="/atualizarProdutos" method="POST">
                                <input type="hidden" name="prod" value="<%= produtos.id %>">
                                <button class="btn btn-primary">Atualizar</button>
                            </form>
                        </th>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
<%- include('../Partials/footer.ejs') %>