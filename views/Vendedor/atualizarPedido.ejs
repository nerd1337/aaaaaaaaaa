        <input type="number" name="telefoneCliente" value="<%=cliente.telefone%>" readonly class="form-control"><br>
        <select name="produtos" class="form-control">
            <% produtos.forEach((produtos) => { %>
                <option value="<%= produtos.id %>"> <%= produtos.nomeProduto %> - R$<%= produtos.preco %></option>
            <% }) %>
        </select><br>
        <input type="number" name="quantidade" placeholder="Digite a quantidade" class="form-control"><br>
        <button class="btn btn-primary"> Atualizar Pedido </button>
    </form>
